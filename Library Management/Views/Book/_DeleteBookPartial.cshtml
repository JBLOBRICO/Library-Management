@model Library_Management.Models.DeleteBookViewModel

<div class="modal-header">
    <h5 class="modal-title">Delete Book</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <p>Are you sure you want to delete "<strong>@Model.Title</strong>"?</p>
</div>

<div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
    <button type="button" class="btn btn-danger" id="confirmDeleteBtn" data-id="@Model.BookId">Delete</button>
</div>
